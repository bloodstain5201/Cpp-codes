#include<iostream.h>
#include<conio.h>
#include<math.h>
    float power(int a,int b)
    {
       float r;
       r=pow(a,b);
       return r;
    }
    float power(int a)
    {
       int s;
       s=pow(a,1);
       return s;
    }
    void main()
    {
       int n;
       float x,res;
       cout<<"\nEnter the value of x and n";
       cin>>x>>n;
       if(n>0)
       res=power(x,n);
       else if(n==0)
       res=power(x);
       cout<<"\n Result  :  "<<res;
       getch();
    }